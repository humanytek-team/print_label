<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="print_label_prod2">
            <t t-call="report.html_container">

                <t
                    t-call="print_label.prod_report_document2"
                    t-lang="user.partner_id.lang"/>
            </t>
        </template>

        <!-- Translatable template -->
        <template id="prod_report_document2">
            <t t-set="docs" t-value="docs.with_context({'lang':user.partner_id.lang})" />
            <!--<t t-call="report.external_layout">-->
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="o.move_lines" t-as="pack">
                        <t t-foreach="decimal_format(pack.product_uom_qty)" t-as="qty">
                            <div class="page">
                                <div class="row" >
                                    <div class="col-xs-4" style="font-size: 14px; margin-top:0; margin-bottom:0;">
                                        <strong><span t-field="o.min_date" /></strong>
                                    </div>
                                    <div class="col-xs-4" style="font-size: 14px; margin-top:0; margin-bottom:0;">
                                        <strong><span t-field="o.sale_id.type_id.name" /></strong>
                                    </div>
                                    <div class="col-xs-4" style="font-size: 14px; margin-top:0; margin-bottom:0;">
                                        <strong><span t-field="o.sale_id.type_id.name" /></strong>
                                    </div>
                                </div>
                                <div class="row">
                                        <h1 t-field="o.partner_id.name" />
                                </div>
                                <br/><br/><br/>
                                <div class="row">
                                        <h1 t-field="pack.product_id.default_code" />
                                        <h2 t-field="pack.product_id.name" />
                                </div>
                                <div class="row text-center" style="font-size: 20px;">
                                        <span t-esc="qty+1" /> /
                                        <span t-esc="decimal_format(pack.product_uom_qty)" />

                                </div>
                            </div>
                        </t>
                    </t>
                </t>
            <!--</t>-->
        </template>

    </data>
</odoo>
