<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="print_order_shipping">
            <t t-call="report.html_container">

                <t
                    t-call="print_label.order_shipping_report_document"
                    t-lang="user.partner_id.lang"/>
            </t>
        </template>

        <!-- Translatable template -->
        <template id="order_shipping_report_document">
            <t t-set="docs" t-value="docs.with_context({'lang':user.partner_id.lang})" />
            <!--<t t-call="report.external_layout">-->
                <t t-foreach="docs" t-as="o">
                    <!--<t t-foreach="o.box" t-as="box">-->
                        <div class="page">
                            <div
                                class="row mt32 mb32">
                                <div class="col-md-12 mt32 mb32">
                                    <div
                                        class="row table table-condensed text-center"
                                        style="font-size: 14px;border: 3px solid #ddd;border-collapse: collapse;padding: 5px;margin-top:0; margin-bottom:0;">
                                        <h1 >GRUPO REQUIEZ SA DE CV</h1>
                                    </div>
                                    <div
                                        class="row table table-condensed text-center"
                                        style="font-size: 14px; background-color: #DDDDDD;border: 1px solid #ddd;border-collapse: collapse;padding: 5px;">
                                        <h1>Destino</h1>
                                    </div>
                                    <div class="row table table-condensed">
                                        <div>
                                            <h3 t-field="o.partner_id.state_id.name" />
                                        </div>
                                    </div>

                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px; margin-top:0; margin-bottom:0;">
                                        <div class="col-xs-4" style="border: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 >Cliente</h3>
                                        </div>
                                        <div class="col-xs-8" style="font-size: 14px; border: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 t-field="o.partner_id.name" />
                                        </div>
                                    </div>
                                    <div
                                        class="row table table-condensed text-center"
                                        style="font-size: 14px; background-color: #DDDDDD;border: 1px solid #ddd;margin-top:0; margin-bottom:0;">
                                        <h1>Domicilio de Entrega</h1>
                                    </div>
                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px; border: 3px solid #ddd;margin-top:0; margin-bottom:0;margin-top:0; margin-bottom:0;">
                                        <span t-field="o.partner_id.street" />,
                                        <span t-field="o.partner_id.street2" />,
                                        <span t-field="o.partner_id.city" />,
                                        <span t-field="o.partner_id.state_id.name" />,
                                        <span t-field="o.partner_id.country_id.name" />,
                                    </div>
                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px; border: 3px solid #ddd;margin-top:0; margin-bottom:0;margin-top:0; margin-bottom:0;">
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 >No. De Cajas</h3>
                                        </div>
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 t-field="o.box" />
                                        </div>

                                    </div>

                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px; border: 3px solid #ddd;margin-top:0; margin-bottom:0;margin-top:0; margin-bottom:0;">
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 >No. De Atajos</h3>
                                        </div>
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3/>
                                        </div>

                                    </div>
                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px; border: 3px solid #ddd;margin-top:0; margin-bottom:0;margin-top:0; margin-bottom:0;">
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 >Valor Declarado</h3>
                                        </div>
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 />
                                        </div>

                                    </div>
                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px; border: 3px solid #ddd;margin-top:0; margin-bottom:0;margin-top:0; margin-bottom:0;">
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 >Transporte</h3>
                                        </div>
                                        <div class="col-xs-6" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 />
                                        </div>

                                    </div>
                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px;margin-top:0; margin-bottom:0;margin-top:0; margin-bottom:0;">
                                        <div class="col-xs-4" style="font-size: 14px;margin-top:0; margin-bottom:0;">
                                            <h3 >No. De Factura</h3>
                                        </div>
                                        <div class="col-xs-8" style="font-size: 14px;margin-top:0; margin-bottom:0;">
                                            <h3 >Condiciones de Entrega:</h3>
                                        </div>

                                    </div>
                                    <div
                                        class="row table table-condensed"
                                        style="font-size: 14px; border: 3px solid #ddd;margin-top:0; margin-bottom:0;margin-top:0; margin-bottom:0;">
                                        <div class="col-xs-4" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <p t-field="o.sale_id.invoice_ids[0].move_name" t-if="o.sale_id.invoice_ids"/>
                                        </div>
                                        <div class="col-xs-4" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <h3 />
                                        </div>
                                        <div class="col-xs-4" style="font-size: 14px; border-left: 3px solid #ddd;margin-top:0; margin-bottom:0;">
                                            <p t-field="o.sale_id.invoice_ids[0].state" t-if="o.sale_id.invoice_ids"/>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    <!--</t>-->
                </t>
            <!--</t>-->
        </template>

    </data>
</odoo>
